                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
               
    <section class="ftco-intro img" style="color: white;">
                    <div class="overlay"></div>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-md-9 text-center">
                              <header role="banner">
                                <div class="top-bar" style="color: white;">
                                      <div class="container">
                                        <div class="row">
                                            <div class="col-md-1 col-sm-1 col-0">
                                                <ul class="social list-unstyled">
                                                </ul>
                                              </div>
                                          
                                          <div class="col-md-6 col-sm-6 col-7 text-right" style="color: white;" >
                                            <p class="mb-0">
                                              <a href="#" class="cta-btn" data-toggle="modal" data-target="#modalAppointment">Make an Appointment</a></p>
                                          </div>
                                        </div>
                                      </div>
                                  </div>
                                <h1 style="color: black;"><p>The best are selected to give you the care you need</p></h1>
                                
                            </div>
                        </div>
                    </div>
                </section>

        <section class="ftco-section ftco-no-pt ftco-no-pb" id="department-section">
        <div class="container-fluid px-0">
            <div class="row no-gutters">

       <div class="col-md-4 d-flex">
                    <div class="img img-dept align-self-stretch" style="background-image: url(../../images/dept-1.jpg);"></div>
                </div>
                {{#if hasDoctor }}
                    <div class="container">
                        <div class="row no-gutters">
                            {{#each doctors  }}
                                <div class="col-sm">
                                    <div class="department-wrap p-4 ftco-animate">
                                        <div class="text p-2 text-center">
                                            <div class="icon">
                                                <span class="flaticon-stethoscope"></span>
                                            </div>
                                        
                                            <img src="../../images/{{ this.img }}" alt="Avatar">
                                            
                                            <h3 style="color:#6cccc9;">{{ this.FName }} {{ this.LName}}</h3>
                                            <p>{{ this.Description }}</p>
                                        </div>
                                    </div>  
                                </div>
                            {{/each }}    
                {{ else }}
                   <h1>Sorry...No Doctors </h1> 
                {{/if  }}



                    </div>
                </div>
            </div>
        </div>
    </section> 
            




       



    

    </div>

        <div class="modal fade" id="modalAppointment" tabindex="-1" role="dialog" aria-labelledby="modalAppointmentLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title" id="modalAppointmentLabel"><strong>Appointment</strong></h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <hr/>
          <div class="modal-body">
            <form action="#">
              <div class="form-group">
                <label for="appointment_name" class="text-black">Doctor Name</label>
                <input type="text" class="form-control" id="appointment_name">
              </div>
              <div class="form-group">
                <label for="appointment_email" class="text-black">Clinic</label>
                <input type="text" class="form-control" id="appointment_email">
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="appointment_date" class="text-black">Date</label>
                    <input type="text" class="form-control" id="appointment_date">
                  </div>    
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="appointment_time" class="text-black">Time</label>
                    <input type="text" class="form-control" id="appointment_time">
                  </div>
                </div>
              </div>
              

              <div class="form-group">
                <label for="appointment_message" class="text-black">Your counsaltance</label>
                <textarea name="" id="appointment_message" class="form-control" cols="30" rows="10"></textarea>
              </div>
              <div class="form-group">
                <input type="submit" value="Reserve the appointment" class="btn btn-primary">
              </div>
            </form>
          </div>
          
        </div>
      </div>
    </div>

    
        
